<!-- Added directory extension to traverse accordingly -->
<%- include("../partials/header") %>

<div class="container">
	<div class="row">
			
<h1 style="text-align: center;">
	Edit <%= campgrounds.name%> Entry
</h1>
		<div style="width:30%; margin: 40px auto;">
			<form action="/campgrounds/<%= campgrounds._id %>?_method=PUT" method="POST">
					<div class="form-group">
				<input class="form-control" type="text" name="EditPg[name]" value="<%= campgrounds.name%>">
					</div>
					<div class="form-group">
				<input class="form-control" type="number" name="EditPg[price]" value="<%= campgrounds.price%>" min="0.01" step="0.10">
					</div>
					<div class="form-group">
				<input class="form-control" type="text" name="EditPg[image]" value="<%= campgrounds.image%>">
					</div>
				<div class="form-group">
				<input class="form-control" type="text" name="EditPg[desc]" value="<%= campgrounds.desc%>">
					</div>
				
					<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">
					Update Entry
				</button>
					</div>

			</form>
				<a class="btn btn-warning btn-lg btn-block" href="/campgrounds">Back to Joural Entries</a>
			</div>
	</div>
</div>

<%- include("../partials/footer") %>